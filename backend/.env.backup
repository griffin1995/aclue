# Aclue Development Environment Variables
# Created for email service testing with Resend API

# ============================================================================
# CORE DEVELOPMENT CONFIGURATION
# ============================================================================

# Enable debug mode for development
DEBUG=true

# Development environment
ENVIRONMENT=development

# Development secret key (not for production)
SECRET_KEY=INSECURE-DEVELOPMENT-KEY-NEVER-USE-IN-PRODUCTION

# ============================================================================
# EMAIL SERVICE CONFIGURATION (RESEND API)
# ============================================================================

# Resend API key for email sending
RESEND_API_KEY=re_4t81BpdY_DdQ89DqweaiFdVGaSnDhJ4hw

# ============================================================================
# MINIMAL SUPABASE CONFIGURATION (PLACEHOLDER)
# ============================================================================

# Placeholder Supabase settings to prevent startup errors
# These can be configured later for full database functionality
SUPABASE_URL=https://placeholder.supabase.co
SUPABASE_ANON_KEY=placeholder_anon_key
SUPABASE_SERVICE_KEY=placeholder_service_key

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server binding for development
HOST=0.0.0.0
PORT=8000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allow all hosts for development
ALLOWED_HOSTS=localhost,127.0.0.1,aclue.app

# ============================================================================
# RATE LIMITING
# ============================================================================

# More permissive rate limiting for development
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Debug logging level
LOG_LEVEL=DEBUG

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable features for testing
ENABLE_REGISTRATION=true
ENABLE_ML_RECOMMENDATIONS=false
ENABLE_AFFILIATE_TRACKING=false