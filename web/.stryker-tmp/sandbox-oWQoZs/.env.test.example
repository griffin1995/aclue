# aclue Frontend Test Environment Configuration
#
# Test environment variables for CI/CD and local testing.
# Copy this file to .env.test and configure for your test environment.

# Application Configuration
NODE_ENV=test
NEXT_TELEMETRY_DISABLED=1

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Supabase Configuration (Test)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=test_anon_key_for_frontend_testing

# Feature Flags (Test)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true

# Analytics Configuration (Test/Mock)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_POSTHOG_KEY=test_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=http://localhost:8000

# Social Authentication (Test/Mock)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=test_nextauth_secret_key
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret

# Payment Configuration (Test/Mock)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_example_key
STRIPE_SECRET_KEY=sk_test_example_key

# Content Security Policy (Test)
NEXT_PUBLIC_CSP_REPORT_URI=http://localhost:3000/api/csp-report

# Performance and Debugging (Test)
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_API_DELAY=0

# Testing Configuration
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000
PLAYWRIGHT_TIMEOUT=30000
JEST_TIMEOUT=10000

# Development Tools (Test)
ANALYZE_BUNDLE=false
WEBPACK_BUNDLE_ANALYZER=false