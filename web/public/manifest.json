{
  "name": "GiftSync - AI-Powered Gift Recommendations",
  "short_name": "GiftSync",
  "description": "Discover perfect gifts with AI-powered recommendations. Swipe, discover, and share amazing gift ideas.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#f03dff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-GB",
  "dir": "ltr",
  "categories": ["shopping", "lifestyle"],
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "icons": [
