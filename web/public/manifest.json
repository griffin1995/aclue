    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "GiftSync Desktop - Swipe Interface"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "GiftSync Mobile - Gift Discovery"
    }
  ],
  "shortcuts": [
    {
      "name": "Discover Gifts",
      "short_name": "Discover",
      "description": "Start discovering gifts with AI",
      "url": "/discover",
      "icons": [
        {
          "src": "/icons/shortcut-discover.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Dashboard",
      "short_name": "Dashboard",
      "description": "View your recommendations and profile",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Gift Links",
      "short_name": "Links",
      "description": "Create and share gift links",
      "url": "/dashboard/gift-links",
      "icons": [
        {
          "src": "/icons/shortcut-links.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.giftsync.app",
      "id": "com.giftsync.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/giftsync/id123456789",
      "id": "123456789"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+giftsync",
      "url": "/share?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}