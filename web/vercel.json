{
  "version": 2,
  "framework": "nextjs",
  "regions": ["iad1"],
  "buildCommand": "npm run build:secure",
  "ignoreCommand": "bash -c 'if [[ \"$VERCEL_GIT_COMMIT_REF\" == \"main\" ]] ; then exit 1; else exit 0; fi'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://app.posthog.com https://www.googletagmanager.com https://cdn.mxpnl.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://aclue-backend-production.up.railway.app https://app.posthog.com https://www.google-analytics.com https://api.mixpanel.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "aclue",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0",
    "NEXT_PUBLIC_APP_DESCRIPTION": "AI-powered gift recommendation platform",
    "NEXT_PUBLIC_API_URL": "https://aclue-backend-production.up.railway.app",
    "NEXT_PUBLIC_WEB_URL": "https://aclue.app",
    "NEXT_PUBLIC_MAINTENANCE_MODE": "false",
    "NEXT_PUBLIC_APP_ROUTER_ENABLED": "true",
    "NEXT_PUBLIC_APP_ROUTER_ROUTES": "auth,profile",
    "NEXT_PUBLIC_APP_ROUTER_ROLLOUT_PERCENTAGE": "25",
    "NODE_VERSION": "18",
    "SECURITY_SCAN_ENABLED": "true",
    "BUILD_SECURITY_CHECK": "true"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/.well-known/security.txt",
      "destination": "/api/security-txt"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "enabled": false,
    "autoJobCancelation": true
  }
}
